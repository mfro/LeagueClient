<UserControl x:Class="LeagueClient.UI.Selectors.RuneListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Image Stretch="Fill" Name="RuneIcon" Width="40" Height="45" Grid.RowSpan="2"/>
    <TextBlock TextWrapping="Wrap" Grid.Column="1" Name="RuneName" VerticalAlignment="Bottom">Greater Mark of Attack Damage</TextBlock>
    <TextBlock TextWrapping="Wrap" Grid.Column="1" Grid.Row="1" Name="RuneStats" VerticalAlignment="Top">+0.95 attack damage</TextBlock>
    <TextBlock FontSize="10" Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Name="RuneCount" Padding="4 0">x9</TextBlock>
  </Grid>
</UserControl>
