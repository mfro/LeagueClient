<UserControl x:Class="LeagueClient.UI.Selectors.MasteryIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Border BorderThickness="2" Name="Border" BorderBrush="{StaticResource ForeBrush}" MouseWheel="Control_MouseWheel">
    <Grid Width="40" Height="40">
      <Image Width="40" Height="40" Name="Icon"/>
      <Label Name="PointsLabel" Content="0/0" Background="{StaticResource ForeBrush}" Margin="0 0 -6 -8" Padding="2 0" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="11"/>
    </Grid>
  </Border>
</UserControl>
